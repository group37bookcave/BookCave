@model IEnumerable<BookCave.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "All Products";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <div class="page-header">
                <div class="inline-block">
                    <h1>
                        <span class="book-cave-color">ALL</span><span>PRODUCTS</span>
                    </h1>
                </div>
                <span class="filter-and-sort">
                    <a id="filter-products" class="inline-block">Filter</a>
                    <form class="inline-block">
                        <select class="form-control" id="sort-by">
                            <option value="">Sort by:</option>
                            <option value="name">Name</option>
                            <option value="author">Author</option>
                            <option value="price">Price</option>
                            <option value="popularity">Popularity</option>
                            <option value="pages">Number of pages</option>
                            <option value="release-year">Release Year</option>
                            <option value="lenght">Length</option>
                            <option value="rating">Rating</option>
                        </select>
                    </form>
                </span>
                <div class="row" id="filter">
                    <h5 id="filter-by-text">Filter by:</h5>
                    <div class="col-xs-3 form-group">
                        <select class="form-control" name="selected-genre" id="select-genre">
                            <option value="none">Genre</option>
                            <option value="Biographies">Biographies & Memoirs</option>
                            <option value="Children">Children</option>
                            <option value="Fantasy">Fantasy</option>
                            <option value="Fiction">Fiction</option>
                            <option value="Mystery">Mystery, Thriller & Suspence</option>
                            <option value="Non-Fiction">Non - Fiction</option>
                            <option value="Self-Help">Self - Help</option>
                        </select>
                    </div>
                    
                    <div class="form-check col-xs-6 form-check-inline">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                        <label class="form-check-label" for="defaultCheck1">Audio Books</label>
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                        <label class="form-check-label" for="defaultCheck2">E - Books</label>
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck3">
                        <label class="form-check-label" for="defaultCheck3">Hardcover</label>
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck3">
                        <label class="form-check-label" for="defaultCheck3">Paberback</label>
                    </div>
                </div>
            </div>
            <table>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-sm-3 col-md-3" valign="top">
                            <div>
                                <img alt="Cover Art" class="bookDetailImg" src="@item.Image"/>
                            </div>
                        </td>
                        <td class="col-sm-5 col-md-5" valign="top">
                            <div>
                                
                                    <ul>
                                        <li>
                                            <h4>
                                                <a href="/Product/BookDetail/@item.Id">@item.Name</a>
                                            </h4>
                                        </li>
                                        <li>
                                            Author: @foreach(var author in item.Authors){@author.FullName}
                                        </li>
                                        <li>
                                            Format: @item.Format
                                        </li>
                                        <li>
                                            Length: @item.Length
                                        </li>
                                        <li>
                                            Release Date: @item.ReleaseDate.Day/@item.ReleaseDate.Month/@item.ReleaseDate.Year
                                        </li>
                                        <li>
                                            Language: @foreach(var lan in item.Languages){@lan.Name}                                                 
                                        </li>
                                        <li>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="grey"> No rating(s) </span>
                                        </li>
                                    </ul>
                                
                            </div>
                        </td>
                        <td class="col-sm-2 col-md-2" valign="top">
                            <div>
                                <h5>Price: 
                                    $@item.Price
                                </h5>
                            </div>
                        </td>
                        <td class="col-sm-2 col-md-2" valign="top">

                            <div>
                                <div class="button-options grey-buttons">
                                    <a class="btn btn-default" type="button" asp-area="" asp-controller="" asp-action="">
                                        Buy Now
                                    </a>
                                </div>
                                <div class="button-options green-buttons">
                                    <a class="btn btn-default" type="button" asp-area="" asp-controller="/Order" asp-action="AddToCart" asp-route-id="@item.Id">
                                        Add to Cart
                                    </a>
                                </div>
                                <div class="button-options green-buttons">
                                    <a class="btn btn-default" type="button" asp-area="" asp-controller="" asp-action="">
                                        Add to WishList
                                    </a>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
                </tbody>
            </table>
        <hr/>        
        </div>
    </div>
</div>