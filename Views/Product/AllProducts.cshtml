@model IEnumerable<BookCave.Models.EntityModels.Product>

@{
    ViewData["Title"] = "All Products";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <div class="page-header">
                <div class="inline-block">
                    <h1><span class="book-cave-color">ALL</span><span>PRODUCTS</span></h1>
                </div>
                
                <span class="filter-and-sort">
                    <a class="inline-block">Filter</a>
                    <form class="inline-block">
                        <select class="form-control" id="sort-by">
                        <option value="">Sort by:</option>
                        <option value="name">Name</option>
                        <option value="author">Author</option>
                        <option value="price">Price</option>
                        <option value="popularity">Popularity</option>
                        <option value="pages">Number of pages</option>
                        <option value="release-year">Release Year</option>
                        <option value="lenght">Length</option>
                        <option value="rating">Rating</option>
                        </select>
                    </form>
                </span>
              
            </div>

                <table>
                    <tbody>
                        <tr class="list-item">
                            <td class="col-sm-8 col-md-6">
                                <div class="media">
                                <a class="pull-left" href="#"> <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/180x200/456" class="media-object" alt="ItemImage" style="width: 180px; height: 200px;"></div> </a>
                                <div class="media-body">
                                    <h4>Item name</h4>
                                    <ul>
                                        <li>Author:</li>
                                        <select>
                                            <option>HardCover</option>
                                            <option>Physical</option>
                                            <option>AudioBook</option>
                                            <option>E-Book</option>
                                        </select>
                                        <li>Length:</li>
                                        <li>Release date:</li>
                                        <li>Language:</li>
                                    </ul>
                                   
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                </div>
                            </div>
                            </td>
                    
                            <td class="col-sm-1 col-md-1">
                                <p><strong>Price: $0.00</strong></p>
                            </td>
                        
                            <td class="col-sm-1 col-md-1">
                            
                                <div class="button-options grey-buttons"> 
                                    <a class="btn btn-default" type="button" asp-area="" asp-controller="" asp-action="">Buy Now</a>
                                </div>
                                <div class="button-options green-buttons">
                                    <a class="btn btn-default" type="button" asp-area="" asp-controller="" asp-action="">Add to Cart</a>
                                    <a class="btn btn-default" type="button" asp-area="" asp-controller="" asp-action="">Add to WishList</a>
                                </div>	
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

