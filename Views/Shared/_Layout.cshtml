                                    <h5>Genres</h5>
                                </li>
                                <li>
                                    <a asp-controller="Product" asp-action="BestSellers">Biographies & Memoirs</a>
                                </li>
                                <li>
                                    <a asp-controller="Product" asp-action="BestSellers">Children</a>
                                </li>
                                <li>
