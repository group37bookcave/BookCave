@model BookCave.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <div class="page-header">
                <h1>
                    <span class="book-cave-color">SHOPPING</span><span>CART</span>
                </h1>
            </div>
            <table>
                <tbody>
               
                   @foreach (var item in Model.Items)
                    {
                    <tr>
                        <td class="col-sm-3 col-md-3" valign="top">
                            <div>
                                <img alt="Cover Art" class="bookDetailImg" src="@item.Image"/>
                            </div>
                        </td>
                        <td class="col-sm-5 col-md-5" valign="top">
                            <div>
                                
                                    <ul>
                                        <li>
                                            <h4>
                                                <a href="/Product/BookDetail/@item.Id">@item.Name</a>
                                            </h4>
                                        </li>
                                        <li>
                                            Author: @foreach(var author in item.Authors){@author.FullName}
                                        </li>
                                        <li>
                                            Format: @item.Format
                                        </li>
                                        <li>
                                            Length: @item.Length
                                        </li>
                                        <li>
                                            Release Date: @item.ReleaseDate.Day/@item.ReleaseDate.Month/@item.ReleaseDate.Year
                                        </li>
                                        <li>
                                            Language: @foreach(var lan in item.Languages){@lan.Name}                                                 
                                        </li>
                                        <li>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="fa fa-star grey"></span>
                                            <span class="grey"> No rating(s) </span>
                                        </li>
                                    </ul>
                                
                            </div>
                        </td>
                        <td class="col-sm-2 col-md-2" valign="top">
                            <div>
                                <h5>Price: 
                                    $@item.Price
                                </h5>
                            </div>
                        </td>
                    </tr>
                }
                    
                </tbody>
            </table>
            <div class="button-options grey-buttons">
            
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Order" asp-action="Address">Checkout</a>
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Product" asp-action="AllProducts">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>