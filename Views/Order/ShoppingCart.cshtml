@model BookCave.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <div class="page-header">
                <h1>
                    <span class="book-cave-color">SHOPPING</span><span>CART</span>
                </h1>
            </div>
            <table>
                <tbody>
                @if (Model.Items == null || !Model.Items.Any())
                {
                    <h4>Your cart is empty</h4>
                }
                else
                {
                    foreach (var item in Model.Items)
                    {
                        <tr class="list-item">
                            <td class="col-sm-8 col-md-6">
                                <div class="media">
                                    <a class="pull-left" asp-controller="Product" asp-action="BookDetail">
                                        <div class="col-sm-2 hidden-xs">
                                            <img class="bookDetailImg" src=@item.Image class="media-object" alt="ItemImage">
                                        </div>
                                    </a>
                                    <div class="media-body">
                                        <ul>
                                            <li>
                                                <h5>@item.ProductName</h5>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                            <td class="col-sm-1 col-md-2" valign="top">
                                <p>
                                    <h5>Quantity: @item.Quantity</h5>
                                </p>
                            </td>
                            <td class="col-sm-1 col-md-2" valign="top">
                                <p>
                                    <h5>Price: $@item.Price</h5>
                                </p>
                            </td>
                            <td class="col-sm-1 col-md-2" valign="top">
                                <form method="post" asp-controller="Order" asp-action="Remove" asp-route-id=@item.ProductId>
                                    <button class="btn btn-link" type="submit">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
            <div class="button-options grey-buttons">
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Order" asp-action="Address">Checkout</a>
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Product" asp-action="AllProducts">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>