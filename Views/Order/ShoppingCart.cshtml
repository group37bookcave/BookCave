@{
    ViewData["Title"] = "Shopping Cart";
}

<!--<p id=no-wish-list> No items in your Wish List </p>-->
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <div class="page-header">
                <h1>
                    <span class="book-cave-color">SHOPPING</span><span>CART</span>
                </h1>
            </div>
            <table>
                <tbody>
                <tr class="list-item">
                    <td class="col-sm-8 col-md-6" valign="top">
                        <div class="media">
                            <a class="pull-left" href="#">
                                <div class="col-sm-2 hidden-xs">
                                    <img src="http://placehold.it/180x200/456" class="bookDetailImg" alt="ItemImage" >
                                </div>
                            </a>
                            <div class="media-body">
                                <h4>Item name</h4>
                                <ul>
                                    <li>Author:</li>
                                    <li>Format:</li>
                                    <li>Length:</li>
                                    <li>Release date:</li>
                                    <li>Language:</li>
                                </ul>

                                <span class="stars fa fa-star"></span>
                                <span class="stars fa fa-star"></span>
                                <span class="stars fa fa-star"></span>
                                <span class="stars fa fa-star"></span>
                                <span class="stars fa fa-star"></span>
                            </div>
                        </div>
                    </td>

                    <td class="col-sm-2 col-md-2">
                        <input type="number" step="1" max="99" min="1" value="1">
                        <a asp-area="" asp-controller="Order" asp-action="RemoveProduct">Remove</a>
                    </td>

                    <td class="col-sm-2 col-md-2" valign="top">
                        <p>
                            <h5>Price: $0.00</h5>
                        </p>
                    </td>

                    <td class="col-sm-2 col-md-2" valign="top">
                        <p>
                            <h5>Total Price: 100$</h5>
                        </p>
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="button-options grey-buttons">
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Order" asp-action="ReviewPage">Checkout</a>
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Product" asp-action="AllProducts">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>