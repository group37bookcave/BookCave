@using BookCave.Services
@model BookCave.Models.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Your Receipt";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">

            <div class="page-header">
                <h1>
                    <span class="book-cave-color">YOUR</span><span>RECEIPT</span>
                </h1>
            </div>
            <table class="table table-condensed">
                <tbody>
                @foreach (var prod in Model.Items)
                {
                    <tr>
                        <td>@prod.ProductName</td>
                        <td></td>
                        <td>@prod.Quantity</td>
                        <td>@prod.Price</td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    @using (Html.BeginForm())
                    {
                        var total = Helper.GetTotalPrice(Model);
                        <td>Total: $ @total</td>
                    }
                </tr>
                </tbody>
            </table>
            <div class="button-options grey-buttons">
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Product" asp-action="AllProducts">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>