@{
    ViewData["Title"] = "Address Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">

            <div class="page-header">
                <span id="page-name"><h1><span class="book-cave-color">YOUR</span><span id="list">ADDRESS</span></h1></span>
            </div>

            
    	    <form method="post" class="address-form">
                <h3 class="book-cave-color">Billing Address</h3>
                <div class="form-group">
                    <label asp-for="@Model.BillingStreet">Street</label>
                    <input asp-for="@Model.BillingStreet" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.BillingZipcode">Zip</label>
                        <input asp-for="@Model.BillingZipcode" type="text" class="form-control" id="inputZip">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.BillingCity">City</label>
                        <input asp-for="@Model.BillingCity" type="text" class="form-control" id="inputCity">
                    </div>  
    
                    <div class="form-group col-md-4">
                        <label asp-for="@Model.BillingCountry">Country</label>
                        <select asp-for="@Model.BillingCountry" id="inputCountry" class="form-control">
                            <option selected>Select country</option>
                            <option>LAND 1.......</option>
                        </select>
                    </div>
                </div>
            </form>
           
            <form method="post" class="address-form">
            <h3 class="book-cave-color">Shipping Address</h3>
            <div class="form-group">
                    <label asp-for="@Model.ShippingStreet">Street</label>
                    <input asp-for="@Model.ShippingStreet" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
                <div class="form-row">
                     <div class="form-group col-md-2">
                        <label asp-for="@Model.ShippingZipcode">Zip</label>
                        <input asp-for="@Model.ShippingZipcode" type="text" class="form-control" id="inputZip">
                    </div>
                      <div class="form-group col-md-6">
                        <label asp-for="@Model.ShippingCity">City</label>
                        <input asp-for="@Model.ShippingCity" type="text" class="form-control" id="inputCity">
                    </div>  >              
                    
                    <div class="form-group col-md-4">
                        <label asp-for="@Model.ShippingCountry">Country</label>
                        <select asp-for="@Model.ShippingCountry" id="inputCountry" class="form-control">
                            <option selected>Select country</option>
                            <option>LAND 1.......</option>
                        </select>
                    </div>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>

