@{
    ViewData["Title"] = "Wish List";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <div class=page-header>  
            <h1><span class="book-cave-color">WISH</span><span>LIST</span></h1>
            </div>
            <table>             
                <tbody>
                    <tr class="list-item">
                        <td class="col-sm-8 col-md-6">
                            <div class="media">
                                <a class="pull-left" href="#"> <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/180x200/456" class="media-object" alt="ItemImage" style="width: 180px; height: 200px;"></div> </a>
                                <div class="media-body">
                                    <h4>Item name</h4>
                                    <ul>
                                        <li>Author:</li>
                                        <li>
                                            <select>
                                                <option>HardCover</option>
                                                <option>Physical</option>
                                                <option>AudioBook</option>
                                                <option>E-Book</option>
                                            </select>
                                        </li>
                                        <li>Length:</li>
                                        <li>Release date:</li>
                                        <li>Language:</li>  
                                    </ul>
                                   
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                    <span class="stars fa fa-star"></span>
                                </div>
                            </div>
                        </td>
                    
                        <td class="col-sm-1 col-md-1">
                            <p><strong>Price: $0.00</strong></p>
                        </td>
                        
                        <td class="col-sm-1 col-md-1">
                            <div class="button-options grey-buttons">
                                <a type="button" class="btn">Move to cart</a>
                                <form method="post">
                                    <input asp-action="Customer" asp-route-id="" type="submit" value="Remove" class="btn">
                                </form>  
                            </div>	
                        </td>
                    </tr>
                </tbody>
            </table>
            <hr>
            <div class="check-options">
                <input type="checkbox" value="price-drop" id="price-drop">
                <label for="price-drop">Email notification when price drops</label><br>

                <input type="checkbox" value="remove-purchased" id="remove-when-purchased">
                <label for="remove-when-purchased">Remove purchased items</label>
            </div>
        </div>
    </div>
</div>

           

