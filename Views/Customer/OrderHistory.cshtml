@{
    ViewData["Title"] = "Order History";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <h1 class="all-products-header"><span class="book-cave-color">ORDER</span><span>HISTORY</span></h1>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Order Status</th>
                        <th>Comment from supplier</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>304</td>
                        <td>06.05.18</td>
                        <td>In transit</td>
                        <td>Sent from warehouse</td>
                    </tr>
                    <tr>
                        <td>312</td>
                        <td>30.04.18</td>
                        <td>Delivered</td>
                        <td>Delivered 06.05.18</td>
                    </tr>
                </tbody>
            </table>
            <div class="button-options grey-button"> 
                <button type="button" class="btn">Back to shopping</button>
                <button type="button" class="btn">Send to email</button>
            </div>
        </div>
    </div>
</div>

