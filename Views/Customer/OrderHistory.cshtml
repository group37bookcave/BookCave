@model List<BookCave.Models.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Order History";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">

            <div class="page-header">
                <h1><span class="book-cave-color">ORDER</span><span>HISTORY</span></h1>
            </div>
            
            <table class="table table-condensed">
                <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Order Date</th>
                    <th>Order Status</th>
                </tr>
                </thead>
                <tbody>
                @foreach(var order in @Model.items)
                {
                    <tr>
                        <td>order.Id</td>
                        <td>order.Date</td>
                        <td>In transit</td>
                    </tr>
                }
                <tr>
                    <td>312</td>
                    <td>30.04.18</td>
                    <td>Delivered</td>
                </tr>
                </tbody>
            </table>
            
            <div class="button-options grey-buttons"> 
                <a class="btn btn-default grey-buttons" type="button" asp-area="" asp-controller="Product" asp-action="AllProducts">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>
