@{
    ViewData["Title"] = "The Book Cave";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner5.svg" alt="Recommendations" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Product" asp-action="AllProducts">
                        See more titles
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner6.svg" alt="Best Sellers" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Product" asp-action="BestSellers">
                        See more titles
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner7.svg" alt="New Releases" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Product" asp-action="NewReleases">
                        See more titles
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner8.svg" alt="Top Rated" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Product" asp-action="TopRated">
                        See more titles
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
